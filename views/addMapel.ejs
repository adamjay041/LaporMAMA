<html>
    <head>
        <title></title>
    </head>
    <body>
        <header>
            <a href="/">home</a>
        </header>
        <main>
            <form action="/student/<%= data.id %>/edit" method="POST">
                <label>CHOOSE UPCOMING LESSON</label><br>
                <%lesson.forEach(el => {%>
                    <input id="checkbox" type="checkbox" name="lesson" value="<%=el.id%>"><%=el.NameLesson%><br>
                <%})%>
                <input id="submit" type="submit" value="ADD">
            </form>
        </main>
    </body>
</html>

