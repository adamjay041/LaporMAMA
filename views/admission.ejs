<html>
    <head>
        <title></title>
    </head>
    <body>
        <header>
            <a href="/sendEmail">send</a>
            <a href="/">home</a>
        </header>
        <main>
            <form action="/addstudent" method="POST">
                <span>Validation: <%= err %></span><br><br>
                <label>Student Name</label><br>
                <input type="text" name="studentName" minlength="3" maxlength="20" required><br><br>
                <label>Parent Name</label><br>
                <input type="text" name="parentName" minlength="3" maxlength="20" required><br><br>
                <label>Student Email</label><br>
                <input type="email" name="parentEmail" maxlength="30" required><br><br>
                <label>Student Passcode</label><br>
                <input type="password" name="parentPassword" minlength="8" maxlength="15" required><br><br>
                <input type="submit" value="ADD">
            </form>
            <table>
                <theader>
                    <tr>
                        <th>Student Name</th>
                        <th>Average Total Score</th>
                        <th>Parent Name</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(student => { %>
                        <tr>
                            <td><%= student.StudentName %></td>
                            <td><%= student.totalScore %></td>
                            <td><%= student.Parent.name %></td>
                            <td><a href="/editstudent/<%= student.id %>/edit">Edit</a>
                                <a href="/destroystudent/<%= student.id %>/delete">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>
    </body>
</html>

<style>
    header{
        background-color: black;
        width: 100%;
        height: 10%;
        border-radius: 50px;
        text-align: center;
        box-shadow: 0px 3px #c3aaaa;
    }
    form{
        float: left;
    }
    main{
        padding: 4% 5% 1%;
    }
    a {
        color: black;
        background-color: white;
        padding: 0.2% 1%;
        opacity: 90%;
        text-decoration: none;
        border-radius: 20px;
        vertical-align: -webkit-baseline-middle;
    }
    table {
        border-collapse: collapse;
        width: 50%;
        margin: 3% auto;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }
</style>