<html>
    <head>
        <title></title>
    </head>
    <body>
        <header>
            <span id="mainmenu"><a href="/addScore">Add Score</a></span>
            <span id="mainmenu"><a href="/admission">Admission</a></span>
            <span id="mainmenu"><a href="/lesson">Add Lesson</a></span>
            <span id="mainmenu"><a href="/login">Login</a></span>
            <span id="mainmenu"><a href="/logout">Logout</a></span>
        </header>
        <main>
            <table width="100%">
                <thead>
                    <tr>
                        <th>Student Name</th>
                        <th>Average Score</th>
                        <th>Add Mapel</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(student => { %>
                        <tr>
                            <td><%= student.StudentName %></td>
                            <td><%= student.totalScore %></td>
                            <td><a href="/student/<%= student.id %>/edit">Edit</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </main>

    </body>
</html>

<style>
    header{
        background-color: black;
        width: 100%;
        height: 9%;
        border-radius: 50px;
        text-align: center;
        box-shadow: 0px 3px #c3aaaa;
    }
    #mainmenu a {
        color: black;
        background-color: white;
        padding: 0.2% 1%;
        opacity: 90%;
        text-decoration: none;
        border-radius: 20px;
        vertical-align: -webkit-baseline-middle;
    }
    table {
        border-collapse: collapse;
        width: 100%;
        width: 75%;
        margin: 3% auto;
    }

    th, td {
        padding: 8px;
